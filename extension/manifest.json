{
  "manifest_version": 3,
  "icons": {
    "32": "./lumina.png"
  },
  "name": "Lumina extension template",
  "description": "Template for developing browser extension which integrates lumina-wasm",
  "homepage_url": "https://github.com/eigerco/lumina",
  "version": "0.0.1",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": "./lumina.png",
    "default_title": "Lumina",
    "default_popup": "popup.html"
  },
  "permissions": ["unlimitedStorage"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
